<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="IEBAppTheme" parent="Theme.AppCompat.Light">
		<!-- Here we setting appcompat’s actionBarStyle -->
		<item name="actionBarStyle">@style/IEBActionBar</item>
		<item name="actionMenuTextColor">@color/white</item>

		<!-- ...and here we setting appcompat’s color theming attrs -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>

		<!-- The rest of your attributes -->
        <item name="actionOverflowButtonStyle">@style/IEBActionButtonOverflow</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_nav_back</item>
        <item name="homeAsUpIndicator">@drawable/ic_nav_back</item>

        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>

	</style>

	<!-- ActionBar styles -->
	<style name="IEBActionBar" parent="@style/Widget.AppCompat.ActionBar">
		<item name="android:windowContentOverlay">@null</item>

		<!-- Support library compatibility -->
		<item name="elevation">0dp</item>
		<item name="background">@color/primary</item>
		<item name="titleTextStyle">@style/IEBActionBarTitleText</item>
	</style>

    <!-- Overflow button -->
    <style name="IEBActionButtonOverflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_nav_more</item>
    </style>

    <!-- ActionBar title text -->
	<style name="IEBActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">@dimen/action_bar_textSize</item>
	</style>

</resources>