<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_margin="5dp"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.cardinal.instagrameventbus.view.instagram.InstagramImageView
            android:id="@+id/instagram_thumbnail"
            android:layout_width="@dimen/fragment_instagram_card_view_image"
            android:layout_height="@dimen/fragment_instagram_card_view_image"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_launcher"
            android:tint="@color/photo_tint"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/instagram_author"
                android:background="?android:selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/fragment_instagram_user_text"
                android:text="foo"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/instagram_url"
                android:background="?android:selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/fragment_instagram_url_text"
                android:text="bar"
                android:textColor="@android:color/black" />

        </LinearLayout>

	</LinearLayout>

</android.support.v7.widget.CardView>