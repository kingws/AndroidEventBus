<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/dialog_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/dialog_title_and_button_text"
        android:textStyle="bold"
        android:paddingBottom="@dimen/dialog_message_padding_bottom"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/dialog_text_view"
        android:layout_below="@id/dialog_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/dialog_message_text"
        android:layout_marginLeft="@dimen/dialog_message_margin"
        android:layout_marginRight="@dimen/dialog_message_margin"
        android:paddingBottom="@dimen/dialog_message_padding_bottom"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/dialog_ok_button"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/ok"
        android:gravity="center"
        android:textSize="@dimen/dialog_title_and_button_text"
        android:textColor="@color/black"
        android:background="@drawable/white_button"
        android:layout_below="@+id/dialog_text_view" />

</RelativeLayout>
